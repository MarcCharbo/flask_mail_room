{% extends 'base.jinja2' %}

{% block subtitle %} Donate {% endblock subtitle %}

{% block content %}
<form method="POST">
    <label for="name-input">Donor Name:</label><input id="name-input" type="text" name="name"><br>
    <label for="donation-input">Donation Amount:</label><input id="donation-input" type="number" step="1" pattern="\d+" name="donation"><br>
    <input type="submit" value="Donate">
</form>
{% endblock content %}